### Aliases ###

# Colorized and classified file listings
alias ls="ls -FG"

# Colorized and classified file listings using non-BSD version of ls
# alias ls=ls -F --color=auto

# Show hidden files with human-readable size in list form 
alias la="ls -lah"

# Open Mac OSX emacs
if [[ -x /usr/local/Cellar/emacs/24.3/bin ]]; then
  alias gmacs="/usr/local/Cellar/emacs/24.3/Emacs.app/Contents/MacOS/Emacs"
  alias emacs="/usr/local/Cellar/emacs/24.3/bin/emacs"
  alias emacsclient="/usr/local/Cellar/emacs/24.3/bin/emacsclient"
fi

# Make directory navigation easier
alias ..="cd ../"
alias ...="cd ../.."
alias ....="cd ../../.."

# Uncorrects
alias knife="nocorrect knife "
alias rake="noglob rake"

# Useful bundle shorcuts
# alias bx="bundle exec"
alias bake="bundle exec rake"
alias brb="bundle console"
# alias bk="bundle exec knife"

function bx() {
  bundle exec "$@"
}

function bk() {
  bundle exec knife "$@"
}

function gst() {
  gist -c -f "$@" < "$@"
}